    border-radius: 50%;
    border-top-color: var(--color-text-1);
    animation: ai-spin 1s linear infinite;
    margin-bottom: 1rem;
  }

  @keyframes ai-spin {
    to { transform: rotate(360deg); }
  }

  .ai-chatbot-loading-text {
    color: var(--color-text-1);
    font-size: 0.9rem;
    text-align: center;
    padding: 0 1rem;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .ai-chatbot-button {
      width: 5rem;
      height: 5rem;
      bottom: 10rem;
      right: 1rem;
      /* 保持动画效果在移动设备上 */
      animation: ai-pulse 2.5s infinite, ai-glow 3s infinite;
    }

    .ai-chatbot-window {
      width: 100vw;
      height: 100vh;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      border-radius: 0;
    }
  }
</style>