
<%if (theme.chatbot.enable){%>    
<div id="ai-chatbot-button" class="ai-chatbot-button">

</div>
<%}%>
<!-- AI Chatbot Window -->
<div id="ai-chatbot-window" class="ai-chatbot-window">
  <div class="ai-chatbot-header">
    <div class="ai-chatbot-title"><%= theme.chatbot.options.title %></div>
    <button id="ai-chatbot-close" class="ai-chatbot-close">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  <div class="ai-chatbot-content" id="ai-chatbot-content">
    <!-- Loading Animation -->
    <div id="ai-chatbot-loading" class="ai-chatbot-loading">
      <div class="ai-chatbot-loading-spinner"></div>
      <div class="ai-chatbot-loading-text">如果加载时间过长，可尝试打开系统代理</div>
    </div>
    <!-- iframe will be dynamically loaded here when chatbot is opened -->
  </div>
</div>

<script>
  // Get elements
  const chatbotButton = document.getElementById('ai-chatbot-button');
  const chatbotWindow = document.getElementById('ai-chatbot-window');
  const chatbotClose = document.getElementById('ai-chatbot-close');
  const chatbotContent = document.getElementById('ai-chatbot-content');
  const chatbotLoading = document.getElementById('ai-chatbot-loading');
  let iframeLoaded = false;
  let isProcessing = false;

  // Toggle chatbot window
  function toggleChatbot() {
    if (isProcessing) return;
    isProcessing = true;

    const isOpening = !chatbotWindow.classList.contains('ai-chatbot-window-open');
    chatbotWindow.classList.toggle('ai-chatbot-window-open');
    
    // Handle background scrolling
    if (isOpening) {
      // Disable background scrolling when opening chatbot
      document.body.style.overflow = 'hidden';
      document.body.style.touchAction = 'none';
    } else {
      // Enable background scrolling when closing chatbot
      document.body.style.overflow = '';
      document.body.style.touchAction = '';
    }
    
    // Load iframe only when opening the chatbot for the first time
    if (isOpening && !iframeLoaded) {
      // Wait for the window to be fully visible before loading iframe
      setTimeout(() => {
        const iframe = document.createElement('iframe');
        iframe.src = '<%= theme.chatbot.options.chat %>';
        iframe.style.cssText = '<%= theme.chatbot.options.style %>';
        iframe.frameBorder = '0';
        iframe.allow = 'microphone';
        
        // Set timeout to hide loading animation after 5 seconds
        const loadingTimeout = setTimeout(() => {
          if (chatbotLoading) {
            chatbotLoading.style.display = 'none';
          }
        }, 5000);
        
        // Hide loading animation when iframe is loaded (if before 5 seconds)
        iframe.onload = () => {
          clearTimeout(loadingTimeout);
          if (chatbotLoading) {
            chatbotLoading.style.display = 'none';
          }
        };
        
        chatbotContent.appendChild(iframe);
        iframeLoaded = true;
      }, 300); // Wait for CSS transition to complete
    }

    // Reset processing flag after a short delay
    setTimeout(() => {
      isProcessing = false;
    }, 300);
  }

  // Add event listeners for both click and touch events
  if (chatbotButton) {
    chatbotButton.addEventListener('click', toggleChatbot);
    chatbotButton.addEventListener('touchstart', (e) => {
      e.preventDefault();
      toggleChatbot();
    }, { passive: false });
  }

  // Close chatbot window
  function closeChatbot() {
    if (chatbotWindow) {
      chatbotWindow.classList.remove('ai-chatbot-window-open');
      // Enable background scrolling when closing chatbot
      document.body.style.overflow = '';
      document.body.style.touchAction = '';
    }
  }

  if (chatbotClose) {
    chatbotClose.addEventListener('click', closeChatbot);
    chatbotClose.addEventListener('touchstart', (e) => {
      e.stopPropagation();
      closeChatbot();
    }, { passive: true });
  }

  // Close chatbot window when clicking outside
  window.addEventListener('click', (e) => {
    if (e.target === chatbotWindow) {
      chatbotWindow.classList.remove('ai-chatbot-window-open');
      // Enable background scrolling when closing chatbot
      document.body.style.overflow = '';
      document.body.style.touchAction = '';
    }
  });

  // Prevent scroll propagation from chatbot window to background
  if (chatbotWindow) {
    // Touch events for mobile
    chatbotWindow.addEventListener('touchstart', (e) => {
      e.stopPropagation();
    }, { passive: true });
    
    chatbotWindow.addEventListener('touchmove', (e) => {
      e.stopPropagation();
    }, { passive: true });
    
    chatbotWindow.addEventListener('touchend', (e) => {
      e.stopPropagation();
    }, { passive: true });
    
    // Mouse events for desktop
    chatbotWindow.addEventListener('wheel', (e) => {
      e.stopPropagation();
    }, { passive: true });
  }
</script>

